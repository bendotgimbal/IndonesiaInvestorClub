<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>
    <variable
        name="obj"
        type="com.project.indonesiainvestorclub.models.Tweets"
        />

    <variable
        name="listener"
        type="com.project.indonesiainvestorclub.interfaces.ActionInterface.AdapterItemListener"
        />

    <import type="android.text.Html" />

    <import type="android.view.View" />

  </data>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/maxwell"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{obj.author}"
              android:textStyle="bold"
              android:textSize="18sp"
              tools:text="Author"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{obj.date}"
              android:textSize="12sp"
              tools:text="Date"
              />

        </LinearLayout>

      </LinearLayout>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@{Html.fromHtml(obj.content)}"
          tools:text="Content"
          />

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</layout>