                    tools:text="DP ID"
                    />

                <TextView
                    android:id="@+id/dp_id_transaction_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{obj.DPIDText}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dp_id_transaction_label"
                    tools:text="DP ID Value"
                    />

                <TextView
                    android:id="@+id/dp_status_transaction_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/dp_status_transaction_label"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dp_id_transaction_value"
