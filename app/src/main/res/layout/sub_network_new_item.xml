<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.project.indonesiainvestorclub.viewModels.DownlineListItemViewModel" />

        <variable
            name="listener"
            type="com.project.indonesiainvestorclub.interfaces.ActionInterface.AdapterItemListener" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{viewModel::onClickDownline}"
            android:background="@drawable/square_radius_stroke_background"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

          <androidx.appcompat.widget.AppCompatImageView
              android:id="@+id/arrow_ic"
              android:layout_width="25dp"
              android:layout_height="25dp"
              app:srcCompat="@drawable/ic_child_user"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toStartOf="@id/info_wrapper"
              />

          <LinearLayout
              android:id="@+id/info_wrapper"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:layout_marginLeft="5dp"
              android:orientation="vertical"
              app:layout_constraintStart_toEndOf="@id/arrow_ic"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/network_name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.name}"
                android:textSize="16sp"
                tools:text="Name Value"
                />

            <TextView
                android:id="@+id/lots_invest_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.data}"
                android:textSize="16sp"
                tools:text="IIC FX 1 Value :"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:text="@string/hint_no_downline"
                android:visibility="@{viewModel.downlineActive ? View.GONE : View.VISIBLE}"
                tools:visibility="gone"/>

          </LinearLayout>

          <ProgressBar
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              tools:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
            tools:visibility="visible">

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/downline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="@{viewModel.downlineActive ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tree_line"/>

            <View
                android:id="@+id/tree_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/gainsboro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/downline"
                />

          </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </LinearLayout>

</layout>