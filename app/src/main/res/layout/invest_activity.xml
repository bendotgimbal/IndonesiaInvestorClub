              android:textColor="@color/colorPrimary"
              tools:text="ROI"
              />

          <TextView
              android:id="@+id/funds_roi_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{viewModel.fundsRoiValueTx}"
              tools:text="0 % p.a."
