            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fund_coloumn_1"
            app:layout_constraintTop_toTopOf="parent"
            >

          <TextView
              android:id="@+id/funds_meta_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/funds_meta_label"
              android:textSize="18sp"
              android:textStyle="bold"
              tools:text="META INFO"
              />

          <TextView
              android:id="@+id/funds_investor_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:text="@string/funds_investor_pass_label"
              android:textColor="@color/colorPrimary"
              tools:text="Investor Pass"
              />

          <TextView
              android:id="@+id/funds_investor_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{viewModel.fundsInvestorPassValueTx}"
              tools:text="2016"
              />

          <TextView
              android:id="@+id/funds_server_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
