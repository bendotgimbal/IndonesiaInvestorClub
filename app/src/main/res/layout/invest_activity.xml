              />

          <TextView
              android:id="@+id/funds_equity_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:text="@string/funds_equity_progress_label"
              android:textColor="@color/colorPrimary"
              tools:text="Equity Progress"
              />

          <TextView
              android:id="@+id/funds_equity_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{viewModel.fundsEquityProgressValueTx}"
