              />

          <TextView
              android:id="@+id/funds_slots_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:text="@string/funds_slots_label"
              android:textColor="@color/colorPrimary"
              tools:text="Slots"
              />

          <TextView
              android:id="@+id/funds_slots_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{viewModel.fundsSlotsValueTx}"
