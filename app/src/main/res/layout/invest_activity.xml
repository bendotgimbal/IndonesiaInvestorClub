<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>

    <variable
        name="viewModel"
        type="com.project.indonesiainvestorclub.viewModels.InvestViewModel"
        />

    <import type="android.view.View" />

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      >

    <!--Tab Layout-->
    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:onClick="@{viewModel::onClickFunds}"
          android:text="@string/funds_label"
          android:textColor="@{viewModel.fundsTab ? @android:color/white : @color/accentTextInactive}"
          android:textSize="14sp"
          android:textStyle="bold"
          tools:text="Funds"
          tools:textColor="@android:color/white"
          />

      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:onClick="@{viewModel::onClickPerformance}"
          android:text="@string/menu_performance"
          android:textColor="@{viewModel.performanceTab ? @android:color/white : @color/accentTextInactive}"
          android:textSize="14sp"
          android:textStyle="bold"
          tools:text="Performance"
          tools:textColor="@android:color/white"
          />

      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:onClick="@{viewModel::onClickParticipant}"
          android:text="@string/participant_label"
          android:textColor="@{viewModel.participantTab ? @android:color/white : @color/accentTextInactive}"
          android:textSize="14sp"
          android:textStyle="bold"
          tools:text="Participant"
          tools:textColor="@android:color/white"
          />

      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:onClick="@{viewModel::onClickUser}"
          android:text="@string/menu_funds_user"
          android:textColor="@{viewModel.userTab ? @android:color/white : @color/accentTextInactive}"
          android:textSize="14sp"
          android:textStyle="bold"
          tools:text="User"
          tools:textColor="@android:color/white"
          />
    </LinearLayout>

    <!--Funds-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:visibility="@{viewModel.fundsTab ? View.VISIBLE : View.GONE}"
