            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="15dp"
                android:text="@string/march_label"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="15dp"
                android:text="@string/april_label"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="15dp"
                android:text="@string/may_label"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="15dp"
                android:text="@string/june_label"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="15dp"
                android:text="@string/july_label"
