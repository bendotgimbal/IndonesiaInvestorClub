<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.text.Html"/>

    <variable
        name="viewModel"
        type="com.project.indonesiainvestorclub.viewModels.SimpleMessageDialogViewModel"/>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/title_wrapper"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:visibility="@{viewModel.titleVisibility}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="start|center"
          android:paddingEnd="8dp"
          android:paddingStart="8dp"
          android:text="@{Html.fromHtml(viewModel.titleText)}"
          tools:text="Title"
          android:textSize="16sp"/>

      <View
          android:layout_gravity="bottom"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"/>

    </FrameLayout>

    <TextView
        android:id="@+id/dialog_hint_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:gravity="center|start"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:text="@{Html.fromHtml(viewModel.messageText)}"
        android:visibility="@{viewModel.messageVisibility}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_wrapper"
        tools:text="Message"
        android:padding="0dp"
        android:textSize="16sp"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>