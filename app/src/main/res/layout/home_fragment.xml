<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="com.example.indonesiainvestorclub.viewModels.HomeViewModel"
        />

    <import type="android.view.View" />
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_primary_gradient"
        app:layout_constraintBottom_toTopOf="@id/paging_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

      <LinearLayout
          android:id="@+id/fund_wrapper"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:orientation="vertical"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/performance_ytd_label"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Year To Date"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.ytdValueTv}"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="9.999"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/performance_year_label"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Year"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@{viewModel.yearValueTv}"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="1999"
            />


      </LinearLayout>


      <lecho.lib.hellocharts.view.PieChartView
          android:id="@+id/chart"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_margin="20dp"
          android:visibility="@{viewModel.pieChartVisibility ? View.VISIBLE : View.GONE}"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/fund_wrapper"
          tools:visibility="gone"
          />

      <lecho.lib.hellocharts.view.LineChartView
          android:id="@+id/chartLine"
          android:layout_width="0dp"
          android:layout_height="250dp"
          android:padding="5dp"
          android:visibility="@{viewModel.pieChartVisibility ? View.GONE : View.VISIBLE}"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/fund_wrapper"
          tools:visibility="visible"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/paging_wrapper"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/before_btn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="@{viewModel.beforeButtonVisibility}"
          android:focusable="@{viewModel.beforeButtonVisibility}"
          android:onClick="@{viewModel::onButtonBeforeClick}"
          android:visibility="@{viewModel.beforeButtonVisibility ? View.VISIBLE : View.INVISIBLE}"
          app:srcCompat="@drawable/ic_navigate_before_primary"
          />

      <TextView
          android:id="@+id/paging_tv"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@{viewModel.pageState}"
          android:textStyle="bold"
          tools:text="1/3"
          />

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/next_btn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="@{viewModel.nextButtonVisibility}"
          android:focusable="@{viewModel.nextButtonVisibility}"
          android:onClick="@{viewModel::onButtonNextClick}"
          android:visibility="@{viewModel.nextButtonVisibility ? View.VISIBLE : View.INVISIBLE}"
          app:srcCompat="@drawable/ic_navigate_next_primary"
          />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{viewModel.loadingState ? View.VISIBLE : View.GONE}"
        tools:visibility="gone"
        >

      <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"

          app:srcCompat="@color/black_transparent"
          />

      <androidx.core.widget.ContentLoadingProgressBar
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          />

    </FrameLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>