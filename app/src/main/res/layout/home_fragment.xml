<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="com.example.indonesiainvestorclub.viewModels.HomeViewModel"
        />

    <import type="android.view.View" />
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/perfromancelist"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:overScrollMode="never"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/paging_wrapper"-->
    <!--        tools:itemCount="2"-->
    <!--        tools:listitem="@layout/sub_performance_item"-->
    <!--        tools:visibility="visible"-->
    <!--        />-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/paging_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="@{viewModel.yearValueTv}"
          tools:text="YEAR"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/paging_wrapper"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/lightPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/before_btn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="@{viewModel.beforeButtonVisibility}"
          android:focusable="@{viewModel.beforeButtonVisibility}"
          android:onClick="@{viewModel::onButtonBeforeClick}"
          android:visibility="@{viewModel.beforeButtonVisibility ? View.VISIBLE : View.INVISIBLE}"
          app:srcCompat="@drawable/ic_navigate_before_primary"
          />

      <TextView
          android:id="@+id/paging_tv"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@{viewModel.pageState}"
          android:textStyle="bold"
          tools:text="1/3"
          />

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/next_btn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="@{viewModel.nextButtonVisibility}"
          android:focusable="@{viewModel.nextButtonVisibility}"
          android:onClick="@{viewModel::onButtonNextClick}"
          android:visibility="@{viewModel.nextButtonVisibility ? View.VISIBLE : View.INVISIBLE}"
          app:srcCompat="@drawable/ic_navigate_next_primary"
          />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{viewModel.loadingState ? View.VISIBLE : View.GONE}"
        tools:visibility="gone"
        >

      <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"

          app:srcCompat="@color/black_transparent"
          />

      <androidx.core.widget.ContentLoadingProgressBar
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          />

    </FrameLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>