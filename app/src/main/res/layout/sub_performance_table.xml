<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>

    <variable
        name="obj"
        type="com.project.indonesiainvestorclub.models.Month"
        />

  </data>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="65dp"
      android:layout_marginBottom="5dp"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="12dp"
      tools:targetApi="lollipop"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{obj.colourIndex() ? @color/white_row_table : @color/green_row_table}"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.year}"
          android:textSize="14sp"
          android:textStyle="bold"
          tools:text="YEAR"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.jan}"
          android:textSize="14sp"
          tools:text="JAN"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.feb}"
          android:textSize="14sp"
          tools:text="FEB"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.mar}"
          android:textSize="14sp"
          tools:text="MAR"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.apr}"
          android:textSize="14sp"
          tools:text="APR"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.may}"
          android:textSize="14sp"
          tools:text="MAY"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.jun}"
          android:textSize="14sp"
          tools:text="JUN"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.jul}"
          android:textSize="14sp"
          tools:text="JUL"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.aug}"
          android:textSize="14sp"
          tools:text="AUG"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.sep}"
          android:textSize="14sp"
          tools:text="SEP"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.oct}"
          android:textSize="14sp"
          tools:text="OCT"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.nov}"
          android:textSize="14sp"
          tools:text="NOV"
          />

      <TextView
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.dec}"
          android:textSize="14sp"
          tools:text="DEC"
          />

      <TextView
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:gravity="center|start"
          android:padding="15dp"
          android:text="@{obj.ytd}"
          android:textSize="14sp"
          android:textStyle="bold"
          tools:text="YTD"
          />

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</layout>