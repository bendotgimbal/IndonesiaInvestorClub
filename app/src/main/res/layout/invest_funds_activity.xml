<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.project.indonesiainvestorclub.viewModels.InvestFundsViewModel"
            />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:text="Invest Funds"
            android:text="@string/label_invest_funds"
            android:gravity="center|start"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingStart="30dp"
            android:paddingEnd="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/invest_funds_wrapper"/>

        <LinearLayout
            android:id="@+id/invest_funds_wrapper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/square_radius_top_background"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtInvestSlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/invest_slot"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="@={viewModel.mInvestSlot}"
                    android:maxLength="11"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvInvestUSDValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@{viewModel.strInvestUSDValue}"
                android:gravity="start|center"
                android:textSize="16sp"
                tools:text="@string/invest_usd_value"
                />

            <TextView
                android:id="@+id/tvInvestIDRValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:layout_weight="1"
                android:text="@{viewModel.strInvestIDRValue}"
                android:textSize="16sp"
                tools:text="@string/invest_idr_value"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTextTitleTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="start|center"
                    android:text="@string/invest_text_title_total"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="@string/invest_text_title_total"
                    />

                <TextView
                    android:id="@+id/tvTextUSDTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="@{viewModel.investUSDValueTotal}"
                    android:textSize="16sp"
                    tools:text="@string/invest_text_usd_total"
                    />

                <TextView
                    android:id="@+id/tvTextIDRTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="@{viewModel.investIDRValueTotal}"
                    android:textSize="16sp"
                    tools:text="@string/invest_text_idr_total"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_accent_color"
                android:onClick="@{viewModel::onClickInvest}"
                android:text="@string/invest_button"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:clickable="true"
            android:visibility="@{viewModel.loadingState ? View.VISIBLE : View.GONE}"
            tools:visibility="gone"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@color/black_transparent"
                />

            <androidx.core.widget.ContentLoadingProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>